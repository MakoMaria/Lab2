#include <iostream>
#include <vector>

using namespace std;

int main() {
    vector<int> nums; // declare vector
    int num;
    char c;
    while (cin >> num) {
        nums.push_back(num);
        c = getchar();
        if (c == '\n') {
            break;
        }
    }

    int max = 1;

    for (int i = 0; i < nums.size(); i++) {// i = 7 2 1 4 5 1 3 3
        int res = 1;
        for (int k = i - 1; k >= 0; k-- ) {
            if (nums[i] <= nums[k]) {
                res++;
            } else {
                break;
            }
        }
        for (int k = i + 1; k < nums.size(); k++ ) { // 2 3 4 5
            if (nums[i] <= nums[k]){
                res++;
            }
            else {
                break;
            }
        }
        if (nums[i] * res > max) {
            max = nums[i] * res;
        }
    }
    cout << max;
    return 0;
}
